<%layout("/layouts/boilerplate")%>
<body>
    <h2>Edit Listing</h2>
    <form method="post" action="/listings/<%=list._id%>?_method=PATCH" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%=list.title%>" required class="form-control">
                    <div class="invalid-feedback">Title must be Entered</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required><%=list.description%></textarea>
                    <div class="invalid-feedback">Description must be Entered</div>
                    
                </div>
                 <div class="mb-3">
                    <img src="<%=originalImg%>">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="file" name="listing[image]" value="<%=list.image%>" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">price</label>
                    <input type="number" name="listing[price]" value="<%=list.price%>" class="form-control"required>
                    <div class="invalid-feedback">Price must be Entered</div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" value="<%=list.location%>" class="form-control"required>
                    <div class="invalid-feedback">Location must be Entered</div>
                </div>
                <div class="mb-3">
                    <label for="exampleDataList" class="form-label">category</label>
                    <br><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="Trending" name="listing[category]">
                        <label class="form-check-label" for="inlineCheckbox1">Trending</label>
                      </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="Boats" name="listing[category]">
                        <label class="form-check-label" for="inlineCheckbox2">Boats</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="Rooms" name="listing[category]">
                        <label class="form-check-label" for="inlineCheckbox1">Rooms</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="Camping" name="listing[category]">
                        <label class="form-check-label" for="inlineCheckbox2">Camping</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="Towers" name="listing[category]">
                        <label class="form-check-label" for="inlineCheckbox1">Towers</label>
                      </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="Beach" name="listing[category]">
                        <label class="form-check-label" for="inlineCheckbox2">Beach</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="Pools" name="listing[category]">
                        <label class="form-check-label" for="inlineCheckbox1">Pools</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="Mountains" name="listing[category]">
                        <label class="form-check-label" for="inlineCheckbox2">Mountains</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="castle" name="listing[category]">
                        <label class="form-check-label" for="inlineCheckbox2">castle</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="Farms" name="listing[category]">
                        <label class="form-check-label" for="inlineCheckbox1">Farms</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="Mountain-city" name="listing[category]">
                        <label class="form-check-label" for="inlineCheckbox2">Mountain-city</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" value="<%=list.country%>" class="form-control" required>
                    <div class="invalid-feedback">Country must be Entered</div>
                </div>
                <br> <br>
                <button class="btn btn-dark">Submit</button>
            </form>
        </div>
    </div>
</body>
