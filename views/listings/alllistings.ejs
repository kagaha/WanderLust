        </div>
        <div class="fliter">
            <div><i class="fa-solid fa-ship"></i></div>
            <a href="/listings/mountain"><p>Boats</p></a>
        </div>
        <div class="fliter">
            <div><i class="fa-solid fa-bed"></i></div>
            <a href="/listings/mountain"><p>Rooms</p></a>
        </div>
        <div class="fliter">
            <div><i class="fa-solid fa-tent"></i></div>
            <a href="/listings/mountain"><p>Camping</p></a>
        </div>
        <div class="fliter">
            <div><i class="fa-solid fa-tower-observation"></i></div>
            <a href="/listings/mountain"><p>Towers</p></a>
        </div>
        <div class="fliter">
            <div><i class="fa-solid fa-umbrella-beach"></i></i></div>
            <a href="/listings/mountain"><p>Beach</p></a>
        </div>
        <div class="fliter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <a href="/listings/mountain"><p>Pools</p></a>
        </div>
        <div class="fliter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <a href="/listings/mountain"><p>Mountains</p></a>
        </div>
        <div class="fliter">
            <div><i class="fa-brands fa-fort-awesome-alt"></i></div>
            <a href="/listings/mountain"><p>castle</p></a>
        </div>
        <div class="fliter">
            <div><i class="fa-solid fa-cow"></i></div>
            <a href="/listings/mountain"><p>Farms</p></a>
        </div>
        <div class="fliter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <a href="/listings/mountain"><p>Mountain-city</p></a>
        </div>
        <div class="tog-class">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                <label class="form-check-label" for="flexSwitchCheckReverse">Display total after taxes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <%for(let list of allListings){%>
            <a href="/listings/<%=list._id%>" class="list-link">
                <div class="card col listing-card">
                    <img src="<%=list.image.url%>" class="card-img-top" alt="listing-img" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                    <p class="card-text">
                        <b><%=list.title%></b><br>
                        &#8377;<%=list.price.toLocaleString("en-IN")%>/night
                        <i class="item-gst"> +20% GST</i>
                    </p>
                    </div>
                </div>
            </a>
        <%}%>
    
    </div>
    <script src="/js/filter.js"></script>

